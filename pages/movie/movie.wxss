.container{
  background-color: #f2f2f2;
   padding: 0;
   margin: 0;
}

.movies-template{
  margin-bottom: 30rpx;
}
.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search-img{
  margin:auto 0 auto 20rpx;
}

.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;

}
.placeholder{
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
}
.search-panel{
   position: absolute;
